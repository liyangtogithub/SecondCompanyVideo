<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250.0px"
    android:layout_height="match_parent"
    android:background="@drawable/selector_grid_list_item_list_mode"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/tv_video_list_num_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/grid_list_item_num_margin_left"
        android:layout_marginStart="@dimen/grid_list_item_num_margin_left"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="@color/grid_list_item_num_text"
        android:textSize="@dimen/font_size_grid_list_item_num_sp" />

    <TextView
        android:id="@+id/tv_video_list_title_id"
        android:layout_toRightOf="@+id/tv_video_list_num_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:textColor="@color/grid_list_item_title_text"
        android:textSize="@dimen/font_size_grid_list_item_title_sp" />

</RelativeLayout>